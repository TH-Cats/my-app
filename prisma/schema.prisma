generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String?  @unique

  accounts  ProviderAccount[]
  activities Activity[]
}

model ProviderAccount {
  id            String   @id @default(cuid())
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  provider      String
  providerUserId String
  accessToken   String
  refreshToken  String?
  expiresAt     DateTime?
  user          User     @relation(fields: [userId], references: [id])
  userId        String

  @@unique([provider, providerUserId])
}

model Activity {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  provider    String
  providerId  String
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  type        String?
  startTime   DateTime?
  durationSec Int?
  distanceM   Int?
  elevationM  Int?
  avgHr       Int?
  avgCadence  Int?
  caloriesKcal Int?
  temperatureC Int?

  // Optional JSON payload for raw details
  raw         Json?

  @@unique([provider, providerId])
}


